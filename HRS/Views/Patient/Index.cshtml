@using HRS.Models.ViewModels
@model AppointmentModel
<div class="card-deck mx-4 my-5">

    <div class="card" data-aos="zoom-in-down" data-aos-duration="600">
        <div class="card-header">
            <h5>
                <i class="fas fa-tasks"></i>
                Book an appointment
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-2">
                    <label class="control-label ">Patient Name</label>
                </div>
                <div class="col-md-4">
                    <input type="text" asp-for="PatientName" class="form-control">
                    <span asp-validation-for="PatientName" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label class="control-label">Mobile</label>
                </div>
                <div class="col-md-4">
                    <input type="text" asp-for="PatientMobile" class="form-control">
                    <span asp-validation-for="PatientMobile" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-2">
                    <label class="control-label ">Specialty</label>
                </div>
                <div class="col-md-4">
                    @Html.DropDownList("LK_SpecialtiesID", new SelectList(Model.LK_Specialties, "Id", "SpecialtyName"), "Select Specialty", new { @class = "form-control", @id = "specialtyID" })
                    <span asp-validation-for="LK_SpecialtiesID" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label class="control-label">Doctor Name</label>
                </div>
                <div class="col-md-4">
                    @Html.DropDownList("DoctorId", new SelectList(Enumerable.Empty<SelectListItem>()), "Select Doctor", new { @class = "form-control", @id = "DoctorList" })

                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-2">
                    <label class="control-label ">Date</label>
                </div>
                <div class="col-md-4">
                    <input asp-for="Date" type="date" class="form-control" id="AppointmentDate">
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label class="control-label">Specialty</label>
                </div>
                <div class="col-md-4">
                    <button onclick="show_ruslt()" class="carsouel-button">Search</button>

                </div>
            </div>
            <hr />
            <div class="card-body card-body-table">

                <div class="table-responsive">

                    <table id="appointmentsTable" class="table table-borderless table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">start Time</th>
                                <th scope="col">End Time</th>
                                <th scope="col">Select</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row"></th>
                                <td> </td>
                                <td> </td>
                                <td></td>

                            </tr>



                        </tbody>
                    </table>
                </div>
            </div>
            <div class="text-end mt-3">
                <button type="button" class="carsouel-button" onclick="Confirm()">Confirm Appointment</button>
            </div>
        </div>
    </div>
</div>
<div class="position-fixed top-50 start-50 translate-middle p-3" style="z-index: 9999">
    <div id="successToast" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                Appointment booked successfully!
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>
<div class="position-fixed top-50 start-50 translate-middle p-3" style="z-index: 9999">
    <div id="errorToast" class="toast align-items-center text-white bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body" id="errorToastBody">

             </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>
<div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="confirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content text-center">
            <div class="modal-header">
                <h5 class="modal-title w-100" id="confirmationModalLabel">Confirmation</h5>
            </div>
            <div class="modal-body">
                <p><strong>Dr. <span id="modalDoctorName"></span></strong></p>
                <p><strong>Time: <span id="modalTime"></span></strong></p>
                <p class="mt-3">Please show up before 15 minutes prior to the appointment.</p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-outline-primary" onclick="confirmFinal()">Confirm</button>
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>

                      function Confirm() {
            const selectedRadio = $('input[name="selectedAppointment"]:checked');
            const doctorName = $('#DoctorList option:selected').text();
            const appointmentTime = selectedRadio.data('start');

            if (!selectedRadio.length) {
                showErrorToast("Please select an appointment time.");
                return;
            }

            if (!doctorName || doctorName === "Select Doctor") {
                showErrorToast("Please select a doctor.");
                return;
            }

            $('#modalDoctorName').text(doctorName);
            $('#modalTime').text(appointmentTime);

            const modal = new bootstrap.Modal(document.getElementById('confirmationModal'));
            modal.show();
        }

        function confirmFinal() {
            $('#confirmationModal').modal('hide');
            saveAppointment();  
        }
        function showErrorToast(message) {
            $('#errorToastBody').text(message);
            const errorToastEl = document.getElementById('errorToast');
            const errorToast = new bootstrap.Toast(errorToastEl, { delay: 5000 });
            errorToast.show();
        }
            function saveAppointment() {
                debugger;
                const selectedRadio = $('input[name="selectedAppointment"]:checked');
            const selectedAppointmentId = $('input[name="selectedAppointment"]:checked').val();
            const patientName = $('input[name="PatientName"]').val();
            const patientMobile = $('input[name="PatientMobile"]').val();
            const doctorId = $('#DoctorList').val();
              var appointmentDate = $('#AppointmentDate').val();
        const startTime = selectedRadio.data('start');
        const endTime = selectedRadio.data('end');
            if (!patientName) {
            showErrorToast("Patient name is required.");
            return;
        }

        if (!patientMobile) {
            showErrorToast("Patient mobile number is required.");
            return;
        }

        if (!selectedRadio.length) {
            showErrorToast("Please select an appointment.");
            return;
        }
            if (!selectedAppointmentId) {
             showErrorToast("Please select an appointment time.");
            return;

            }

            $.ajax({
                type: 'POST',
                url: '/Appointment/Add',
                data: {
                    doctorId: doctorId,
                    patientName: patientName,
                    patientMobile: patientMobile,
                    startTime: startTime,
                    endTime: endTime,
                    appointmentDate:appointmentDate
                },
                success: function (response) {
                    show_ruslt();
            const toastEl = document.getElementById('successToast');
        const toast = new bootstrap.Toast(toastEl, { delay: 5000 }); 
                    toast.show();
                },
                error: function () {
                    alert("Failed to book the appointment.");
                }
            });
        }
        function show_ruslt() {
            debugger;

            var doctor_Id = $('#DoctorList').val();
             if (!doctor_Id) {
            showErrorToast("Patient Select Doctor.");
            return;
        }
            var appointmentDate = $('#AppointmentDate').val();
              $.ajax({
                                    type: 'GET',
                                    async: true,
                                    url: `/Appointment/Search?doctorId=${doctor_Id}&date=${appointmentDate}`,
                                    success: function (response) {
                                         $('#appointmentsTable tbody').empty();
                                        var appointments = response.data;
                                                if (appointments.length === 0) {
          $('#appointmentsTable tbody').append(`<tr><td colspan="4">No appointments available for this date.</td></tr>`);
        }
        else {
            debugger;
                                        $('#appointmentsTable tbody').empty();
                                        $.each(appointments, function (index, item) {
                    var row = `<tr>
                        <td>${index + 1}</td>
                        <td>${item.startTime}</td>
                        <td>${item.endTime}</td>
                        <td>
                        <input type="radio"
                       name="selectedAppointment"
                       value="${item.id}"
                       id="appointment${index}"
                       data-start="${item.startTime}"
                       data-end="${item.endTime}">
                <label for="appointment${index}"></label>
                         </td>

                    </tr>`;
                    $('#appointmentsTable tbody').append(row);
                });
        }


                                    },
                                    error: function (err) {

                                    }

                                });



        }
                $(document).ready(function () {
            $('#specialtyID').change(function () {
                var specialtyId = $(this).val();
                $('#DoctorList').empty();

                if (specialtyId) {
                    $.ajax({
                        url: '/Doctor/Get_DoctorBySpecialtiesID',
                        type: 'GET',
                        data: { SpecialtiesID: specialtyId },
                        success: function (data) {
                            $('#DoctorList').append($('<option>', {
                                value: '',
                                text: 'Select Doctor'
                            }));
                            $.each(data, function (i, doctor) {
                                $('#DoctorList').append($('<option>', {
                                    value: doctor.id,
                                    text: doctor.name
                                }));
                            });
                        },
                        error: function () {
                            alert('Error loading doctors.');
                        }
                    });
                } else {
                    $('#DoctorList').append($('<option>', {
                        value: '',
                        text: 'Select Doctor'
                    }));
                }
            });
        });
    </script>
}

