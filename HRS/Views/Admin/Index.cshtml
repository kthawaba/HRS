@using HRS.Models.ViewModels
@model List<DoctorModel>
<div class="carousel slide" data-ride="carousel">
	<div class="carousel-inner">
		<div class="carousel-item active">
<div class="card-deck mx-4 my-5">
	<div class="table-header">
		<div class="row">
						<div class="col-md-6">
							<h5> List of doctors</h5>
						</div>
						<div class="col-md-6">
							<div class="form-group row">
								<div class="col-md-12 col-sm-12">
									<a asp-action="AddNewDoctor" asp-controller="Admin" class="carsouel-button aos-init aos-animate btn btn-primary">Add New Doctor</a>

 								</div>
							</div>
						</div>
		</div>
		
					
	</div>
				<div class="ln_solid"></div>
				
	<div class="card" data-aos="zoom-in-down" data-aos-duration="600">
					
		<div class="card-body card-body-table">

			<div class="table-responsive">

				<table class="table table-borderless table-hover">
					<thead>
						<tr>
							<th scope="col">#</th>
							<th scope="col">Name</th>
							<th scope="col">Description</th>

						</tr>
					</thead>
					<tbody>
						@if (Model?.Count >0)
						{
							int counter = 1;
							foreach (var item in Model)
							{
								<tr>
									<th scope="row">@counter</th>
									<td>@item.Name</td>
									<td>@item.LK_Specialties?.SpecialtyName</td>

								</tr>
								counter++;
							}
						}
						else
						{
							<tr>
								<td colspan="3" class="text-center">NO Data</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
</div>
</div>
</div>
